# DOKE-RAG Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# LLM Provider API Keys
# ======================

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Aliyun / Tongyi / DeepSeek (optional)
ALIYUN_API_KEY=your_aliyun_api_key_here
ALIYUN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# DeepSeek (optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ======================
# Ollama Configuration
# ======================
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_LLM_MODEL=llama2

# ======================
# Neo4j Configuration (optional)
# ======================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ======================
# Path Configuration
# ======================
# Working directory for LightRAG (where vector DB, graph DB are stored)
WORKING_DIR=./data/run_data
# Results directory for evaluation outputs
RESULTS_DIR=./evaluation/results
# Expert graphs directory
EXPERT_GRAPHS_DIR=./data/expert_graphs
# Path to .env file (for scripts that need to load it)
ENV_FILE=.env

# ======================
# Storage Configuration
# ======================
GRAPH_STORAGE=networkx
VECTOR_STORAGE=chroma

# ======================
# Model Configuration
# ======================
LLM_MODEL_MAX_TOKEN_SIZE=32768
LLM_MODEL_MAX_ASYNC=4
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIM=768

# ======================
# Processing Configuration
# ======================
CHUNK_TOKEN_SIZE=1200
CHUNK_OVERLAP_TOKEN_SIZE=100
INSERT_BATCH_SIZE=50

# ======================
# Retrieval Configuration
# ======================
DEFAULT_QUERY_MODE=hybrid
DEFAULT_TOP_K=40
DEFAULT_COSINE_THRESHOLD=0.2

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/doke_rag.log

# ======================
# Evaluation Configuration
# ======================
EVAL_JUDGE_MODEL=deepseek-r1
EVAL_NUM_RUNS=5
# Path to consolidated Excel report
EXCEL_RESULTS=./evaluation/Consolidated_Report.xlsx
# Path to championship rankings CSV
CSV_CHAMPIONSHIP=./evaluation/Championship_Rankings_Final.csv

# ======================
# Pipeline Configuration
# ======================

# Audio Processing (Whisper API)
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=auto  # auto | zh | en
MAX_AUDIO_SIZE=500  # MB - Maximum audio file size

# PDF Processing (PaddleOCR-VL) - Future feature
PADDLE_MODEL_DIR=models/paddleocr/
EXTRACT_IMAGES=true
IMAGES_OUTPUT_DIR=data/extracted_images/
FORMULA_FORMAT=latex  # latex | image
MAX_PDF_SIZE=100  # MB - Maximum PDF file size

# Common Pipeline Settings
PIPELINE_OUTPUT_DIR=data/processed/
PIPELINE_MODE=strict  # strict | tolerant
